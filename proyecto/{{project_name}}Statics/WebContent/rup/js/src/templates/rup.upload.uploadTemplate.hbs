

  {{#each files}}
    <li class="list-group-item template-upload">
      <div class="row">
        <div class="col-xs-6 col-md-3">
          <p class="name text-xs-left"><b>{{name}}</b></p>
          <span class="name text-xs-left"><span class="type-text type">{{type}}</span><span class="name text-xs-left size-text size">{{size}}</span></span>
          <p class="name text-xs-left error-text error"></p>


        </div>

        <div class="col-xs-6 col-md-4 fileupload-buttonbar">
            {{#if ../notSubmitInForm}}
                <button class="btn-material btn-material-primary-high-emphasis start" disabled="true">
                    <i class="mdi mdi-upload" aria-hidden="true"></i>
                    <span>{{i18n "rup_upload.startUpload"}}</span>
                </button>

            {{/if}}

                <button class="btn-material btn-material-secondary-high-emphasis cancel">
                    <i class="mdi mdi-close-circle" aria-hidden="true"></i>
                    <span>{{i18n "rup_upload.cancelUpload"}}</span>
                </button>
        </div>

      </div>

    </li>
  {{/each}}
