<%@include file="/WEB-INF/includeTemplate.inc"%>

<h2 class="title">{{maint.title}}</h2>
{% if maint.filter: %}
<jsp:include page="includes/{{maint.name}}FilterForm.jsp"></jsp:include>
{% endif%}

<table id="{{maint.name}}" class="tableFit table-striped table-bordered table-material" 
	data-url-base="{{urlBase}}"
	data-filter-form="#{{maint.name}}_filter_form">
    <thead>
        <tr>
        	{% for column in allColumnsNoPk %}
			<th data-col-prop="{{column.name|snakeToCamel}}" data-col-sidx="{{ column.name.upper()}}" data-col-type="{{ column.type}}">
				<spring:message code="{{column.name|snakeToCamel}}"/>
			</th>

            {% endfor %}
        </tr>
    </thead>
</table>
{% if maint.filter and maint.type == "DETAIL": %}
<jsp:include page="includes/{{maint.name}}Edit.jsp"></jsp:include>
{% endif%}